<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    tools:context="activity_portrait.SettingsActivity">
    <include
        android:id="@+id/topView"
        layout="@layout/shared_layout_top" />

    <include
        android:id="@+id/lowerView"
        layout="@layout/shared_layout_low" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/topView"
        app:layout_constraintBottom_toTopOf="@id/lowerView">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="5dp"
            android:gravity="center">
            <TextView
                android:id="@+id/txtUseRMC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/_____cancel_text"
                android:gravity="center"
                android:text="Bearing Mode"
                android:textColor="@color/white"
                android:textSize="18sp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center">
                <CheckBox
                    android:id="@+id/ckRMC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="Use RMC" />

                <CheckBox
                    android:id="@+id/ckPos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="Use POSITIONS" />

                <CheckBox
                    android:id="@+id/ckhdt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="DUAL GNSS"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/txtOrSmooth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/_____cancel_text"
                android:gravity="center"
                android:text="Bearing Mode"
                android:textColor="@color/white"
                android:textSize="18sp"
                />
            <SeekBar
                android:id="@+id/seekRmc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:layout_marginVertical="10dp"
                android:max="100"
                android:min="10"
                />
            <TextView
                android:id="@+id/txtTollerances"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/_____cancel_text"
                android:gravity="center"
                android:text="Tolerances"
                android:textColor="@color/white"
                android:textSize="18sp"
                />
            <LinearLayout
                android:id="@+id/layoutTol"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingHorizontal="5dp"


                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Z:"
                    android:textColor="@color/black"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/z_tol"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="4"
                    android:gravity="center"
                    android:hint="0.000"
                    android:inputType="numberDecimal"
                    android:maxLength="6"
                    android:selectAllOnFocus="true"
                    android:textSize="22sp" />



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="XY:"
                    android:textColor="@color/black"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/xy_tol"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="4"
                    android:gravity="center"
                    android:hint="0.000"
                    android:inputType="numberDecimal"
                    android:maxLength="6"
                    android:selectAllOnFocus="true"
                    android:textSize="22sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tilt: "
                    android:textColor="@color/black"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/tilt_tol"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="2"
                    android:gravity="center"
                    android:hint="0.0"
                    android:inputType="numberDecimal"
                    android:maxLength="3"
                    android:selectAllOnFocus="true"
                    android:textSize="22sp" />
            </LinearLayout>
            <TextView
                android:id="@+id/txtslopeSet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/_____cancel_text"
                android:gravity="center"
                android:text="Tilt Setup"
                android:textColor="@color/white"
                android:textSize="18sp"
                />
            <TextView
                android:id="@+id/txt_tilt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="@drawable/custom_background_light"
                android:gravity="center"
                android:text=""
                android:maxLines="1"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">
                <CheckBox
                    android:id="@+id/ckUseTilt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:text="Use Tilt "

                    />


                <Button
                    android:id="@+id/calibrateTilt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:backgroundTint="@color/red"
                    android:text="SET ZERO"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                     />
            </LinearLayout>
            <TextView
                android:id="@+id/txtimagemode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@color/_____cancel_text"
                android:gravity="center"
                android:text="Navigator Type"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/calibrateTilt" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                >
                <CheckBox
                    android:id="@+id/ckPalina"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:text="Circle"
                    android:ems="8"
                    />

                <CheckBox
                    android:id="@+id/ckNav"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:text="Triangle"
                    />

            </LinearLayout>
            <ImageView
                android:id="@+id/imgTest"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="0dp"
                android:rotation="270"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ckPalina"
                app:tint="@color/bg_sfsred" />

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>