<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_alibuybutton_states"
    android:keepScreenOn="true"
    tools:context="activity_portrait.MainActivity">
    <include
        android:id="@+id/topView"
        layout="@layout/shared_layout_top" />

    <include
        android:id="@+id/lowerView"
        layout="@layout/shared_layout_low" />

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="0dp"
    app:layout_constraintTop_toBottomOf="@id/topView"
    app:layout_constraintBottom_toTopOf="@id/lowerView"
    android:scrollbarSize="10dp"
    android:fadeScrollbars="false">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <ImageView
                android:id="@+id/img1"
                android:layout_weight="1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/btn_bluetooth_devices"
                app:tint="@color/_____cancel_text" />
            <ImageView
                android:id="@+id/img8"
                android:layout_weight="1"
                android:layout_width="60dp"
                android:layout_height="60dp"

                android:src="@drawable/btn_canconn"
                app:tint="@color/_____cancel_text"

                />

            <ImageView
                android:id="@+id/img3"
                android:layout_weight="1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/btn_files"
                app:tint="@color/_____cancel_text" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:layout_weight="1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/_____cancel_text"
                android:text="GPS BT Config"
                android:gravity="center|top"/>
            <TextView
                android:layout_weight="1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:text="CAN BT Config"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/_____cancel_text"
                android:gravity="center|top"

                />

            <TextView
                android:layout_weight="1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:text="Projects"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/_____cancel_text"
                android:gravity="center|top"/>


        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <ImageView
                app:tint="@color/_____cancel_text"
                android:id="@+id/img4"
                android:layout_weight="1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/btn_setting"
                />

            <ImageView
                android:id="@+id/img5"
                android:layout_weight="1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/btn_mch_measure"
                app:tint="@color/_____cancel_text" />
            <ImageView
                android:id="@+id/openProject"
                android:layout_weight="1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:srcCompat="@drawable/create_surf_btn"
                app:tint="@color/_____cancel_text" />



        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:layout_weight="1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/_____cancel_text"
                android:text="Settings"
                android:gravity="center|top"/>
            <TextView
                android:layout_weight="1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:text="Machine Measurements"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/_____cancel_text"
                android:gravity="center|top"

                />

            <TextView
                android:layout_weight="1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:text="On Grade"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/_____cancel_text"
                android:gravity="center|top"/>


        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <ImageView
                android:id="@+id/img10"
                android:layout_weight="1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/btn_unitsofmeasure"
                app:tint="@color/_____cancel_text"
                />

            <ImageView
                android:id="@+id/img6"
                android:layout_weight="1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/btn_elevation"
                app:tint="@color/_____cancel_text"
                />

            <ImageView
                android:id="@+id/img9"
                android:layout_weight="1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/btn_infoapp"
                app:tint="@color/_____cancel_text"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:layout_weight="1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/_____cancel_text"
                android:text="Units Of Measure"
                android:gravity="center|top"/>
            <TextView
                android:layout_weight="1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:text="Antenna Height"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/_____cancel_text"
                android:gravity="center|top"

                />

            <TextView
                android:layout_weight="1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:text="Info App"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/_____cancel_text"
                android:gravity="center|top"/>


        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <ImageView
                app:tint="@color/_____cancel_text"
                android:id="@+id/img7"
                android:layout_weight="1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/btn_usb_stick"
                />

            <ImageView
                android:id="@+id/img11"
                android:layout_weight="1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/btn_screen_rot"
                app:tint="@color/_____cancel_text"
                />
            <ImageView
                android:id="@+id/img12"
                android:layout_weight="1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/btn_unitsofmeasure"
                app:tint="@color/transparent"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:layout_weight="1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/_____cancel_text"
                android:text="USB Files Transfer"
                android:gravity="center|top"/>
            <TextView
                android:layout_weight="1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:text="Rotate Screen"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/_____cancel_text"
                android:gravity="center|top"

                />

            <TextView
                android:layout_weight="1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:text="On Grade"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/_____cancel_text"
                android:visibility="invisible"
                android:gravity="center|top"/>


        </LinearLayout>
    </LinearLayout>

</ScrollView>


















    <ProgressBar
        android:id="@+id/progressBar"
        style="@style/CustomProgressBar"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_gravity="center"
        android:visibility="visible"
        android:background="@color/_____cancel_text"
        android:alpha="0.7"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>