<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_alibuybutton_states"
    android:keepScreenOn="true"
    tools:context="activity_portrait.MainActivity">

    <include
        android:id="@+id/topView"
        layout="@layout/shared_layout_top" />

    <include
        android:id="@+id/lowerView"
        layout="@layout/shared_layout_low" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fadeScrollbars="false"
        android:scrollbarSize="10dp"
        app:layout_constraintBottom_toTopOf="@id/lowerView"
        app:layout_constraintTop_toBottomOf="@id/topView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img1"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:src="@drawable/btn_bluetooth_devices"
                    app:tint="@color/_____cancel_text" />

                <ImageView

                    android:id="@+id/img15"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:src="@drawable/btn_to_nmea"
                    app:tint="@color/_____cancel_text" />


                <ImageView
                    android:id="@+id/img3"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:src="@drawable/btn_files"
                    app:tint="@color/_____cancel_text" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:gravity="center|top"
                    android:text="GPS BT Config"
                    android:textColor="@color/_____cancel_text"
                    android:textSize="26px"
                    android:textStyle="bold" />


                <TextView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:gravity="center|top"
                    android:text="NMEA Config"
                    android:textColor="@color/_____cancel_text"
                    android:textSize="26px"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:gravity="center|top"
                    android:text="Projects"
                    android:textColor="@color/_____cancel_text"
                    android:textSize="26px"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img4"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:src="@drawable/btn_setting"
                    app:tint="@color/_____cancel_text" />

                <ImageView
                    android:id="@+id/img13"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:src="@drawable/btn_debug"
                    app:tint="@color/_____cancel_text" />


                <ImageView
                    android:id="@+id/openProject"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:padding="5dp"
                    app:srcCompat="@drawable/btn_stakeout"
                    app:tint="@color/_____cancel_text" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:gravity="center|top"
                    android:text="Settings"
                    android:textColor="@color/_____cancel_text"
                    android:textSize="26px"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:gravity="center|top"
                    android:text="Comm Debug"
                    android:textColor="@color/_____cancel_text"
                    android:textSize="26px"
                    android:textStyle="bold" />


                <TextView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:gravity="center|top"
                    android:text="Work"
                    android:textColor="@color/_____cancel_text"
                    android:textSize="26px"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img10"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:src="@drawable/btn_picklibe"
                    app:tint="@color/_____cancel_text" />


                <ImageView
                    android:id="@+id/img11"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:src="@drawable/btn_screen_rot"
                    app:tint="@color/_____cancel_text" />


                <ImageView
                    android:id="@+id/img7"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:src="@drawable/btn_usb_stick"
                    app:tint="@color/_____cancel_text" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:gravity="center|top"
                    android:text="Measure And Align"
                    android:textColor="@color/_____cancel_text"
                    android:textSize="26px"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:gravity="center|top"
                    android:text="Rotate Screen"
                    android:textColor="@color/_____cancel_text"
                    android:textSize="26px"
                    android:textStyle="bold"

                    />

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:gravity="center|top"
                    android:text="USB Files Transfer"
                    android:textColor="@color/_____cancel_text"
                    android:textSize="26px"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:visibility="invisible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/img8"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:alpha="0.3"
                    android:padding="5dp"
                    android:src="@drawable/btn_canconn"
                    app:tint="@color/_____cancel_text"

                    />


                <ImageView
                    android:id="@+id/img6"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:src="@drawable/btn_elevation"
                    app:tint="@color/_____cancel_text" />

                <ImageView
                    android:id="@+id/img14"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:src="@drawable/btn_open_dig"
                    android:visibility="invisible" />


            </LinearLayout>

            <LinearLayout
                android:visibility="invisible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:gravity="center|top"
                    android:text="Can BT Config"
                    android:textColor="@color/_____cancel_text"
                    android:textSize="26px"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:gravity="center|top"
                    android:text="Antenna Height"
                    android:textColor="@color/_____cancel_text"
                    android:textSize="26px"
                    android:textStyle="bold"

                    />

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:gravity="center|top"
                    android:text="STX DIG"
                    android:textColor="@color/_____cancel_text"
                    android:textSize="26px"
                    android:textStyle="bold"
                    android:visibility="invisible"

                    />


            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img9"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:src="@drawable/btn_infoapp"
                    app:tint="@color/_____cancel_text" />

                <ImageView
                    android:id="@+id/img5"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:alpha="0"
                    android:padding="5dp"
                    android:src="@drawable/btn_mch_measure"
                    app:tint="@color/_____cancel_text" />


                <ImageView
                    android:id="@+id/img12"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:alpha="0"
                    android:padding="5dp"
                    android:src="@drawable/coordinate_btn"
                    app:tint="@color/_____cancel_text" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:gravity="center|top"
                    android:text="Info App"
                    android:textColor="@color/_____cancel_text"
                    android:textSize="26px"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:alpha="0"
                    android:gravity="center|top"
                    android:text="Machine Measurements"
                    android:textColor="@color/_____cancel_text"
                    android:textSize="26px"
                    android:textStyle="bold" />


                <TextView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:alpha="0"
                    android:gravity="center|top"
                    android:text="Coordinate Ref. Systems"
                    android:textColor="@color/_____cancel_text"
                    android:textSize="26px"
                    android:textStyle="bold" />


            </LinearLayout>
        </LinearLayout>

    </ScrollView>


    <ProgressBar
        android:id="@+id/progressBar"
        style="@style/CustomProgressBar"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_gravity="center"
        android:alpha="0.7"
        android:background="@color/_____cancel_text"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>