<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    tools:context="activity.AB_WorkActivity">
    <include layout="@layout/shared_layout_top"/>
    <include layout="@layout/shared_layout_low"/>



    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.15" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/H_91"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.905" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/V1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.333333" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/v"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/V2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.666666" />






    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.82" />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container_draw"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="4dp"
        android:background="@color/light_gray"
        app:layout_constraintBottom_toTopOf="@+id/guideline5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline_top"
        app:layout_constraintVertical_bias="0.0">


    </androidx.constraintlayout.widget.ConstraintLayout>



    <Button
        android:id="@+id/crs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="5dp"
        android:backgroundTint="@color/yellow"
        android:text="CRS"
        android:visibility="invisible"
        android:textColor="@color/_____cancel_text"
        app:layout_constraintBottom_toBottomOf="@+id/container_draw"
        app:layout_constraintEnd_toEndOf="@+id/container_draw" />

    <Button
        android:id="@+id/surfaceStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5dp"
        android:layout_marginVertical="20dp"
        android:backgroundTint="@color/pure_green"
        android:text="IN"
        android:textColor="@color/white"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/container_draw"
        app:layout_constraintTop_toBottomOf="@+id/rotateRight" />

    <Button
        android:id="@+id/surfaceOK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="20dp"
        android:backgroundTint="@color/pure_green"
        android:text="OK"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/container_draw"
        app:layout_constraintTop_toBottomOf="@+id/surfaceStatus" />

    <ImageButton
        android:id="@+id/centerNavigator"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="1dp"
        android:backgroundTint="@color/black"
        android:scaleType="fitCenter"
        app:layout_constraintLeft_toLeftOf="@id/container_draw"
        app:layout_constraintRight_toLeftOf="@+id/zoomIn"
        app:layout_constraintTop_toTopOf="@+id/container_draw"
        app:srcCompat="@drawable/centerview"
        app:tint="@color/white" />

    <ImageButton
        android:id="@+id/zoomIn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="1dp"
        android:backgroundTint="@color/black"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/centerNavigator"
        app:layout_constraintLeft_toRightOf="@id/centerNavigator"
        app:layout_constraintRight_toLeftOf="@id/zoomOut"
        app:layout_constraintTop_toTopOf="@+id/centerNavigator"
        app:srcCompat="@drawable/zoomin"
        app:tint="@color/white" />

    <ImageButton
        android:id="@+id/zoomOut"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="1dp"
        android:backgroundTint="@color/black"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/centerNavigator"
        app:layout_constraintLeft_toRightOf="@id/zoomIn"
        app:layout_constraintRight_toLeftOf="@id/rotateLeft"
        app:layout_constraintTop_toTopOf="@+id/centerNavigator"
        app:srcCompat="@drawable/zoomout"
        app:tint="@color/white" />

    <ImageButton
        android:id="@+id/rotateLeft"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="1dp"
        android:backgroundTint="@color/black"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/centerNavigator"
        app:layout_constraintLeft_toRightOf="@id/zoomOut"
        app:layout_constraintRight_toLeftOf="@id/rotateRight"
        app:layout_constraintTop_toTopOf="@+id/centerNavigator"
        app:srcCompat="@drawable/rotate_left"
        app:tint="@color/white" />

    <ImageButton
        android:id="@+id/rotateRight"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="1dp"
        android:backgroundTint="@color/black"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/centerNavigator"
        app:layout_constraintLeft_toRightOf="@id/rotateLeft"
        app:layout_constraintRight_toLeftOf="@id/autorotate"
        app:layout_constraintTop_toTopOf="@+id/centerNavigator"
        app:srcCompat="@drawable/rotate_right"
        app:tint="@color/white" />

    <ImageButton
         android:visibility="visible"
        android:id="@+id/autorotate"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="1dp"
        android:backgroundTint="@color/black"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/centerNavigator"
        app:layout_constraintLeft_toRightOf="@id/rotateRight"
        app:layout_constraintRight_toRightOf="@id/container_draw"
        app:layout_constraintTop_toTopOf="@+id/centerNavigator"
        app:srcCompat="@drawable/baseline_360"
        app:tint="@color/white" />

    <Button
        android:id="@+id/delunay"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="5dp"
        android:backgroundTint="@color/_____cancel_text"
        android:text="DELUNAY"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/container_draw"
        app:layout_constraintEnd_toEndOf="@+id/container_draw" />





    <TextView
        android:id="@+id/fileName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5dp"
        android:layout_marginVertical="5dp"
        android:backgroundTint="@color/transparent"
        android:text="filename"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/container_draw"
        app:layout_constraintTop_toBottomOf="@+id/centerNavigator" />

    <TextView
        android:id="@+id/quota"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="2dp"
        android:layout_marginBottom="2dp"
        android:background="@color/light_gray"
        android:gravity="center"
        android:text="Z: 12.56"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/H_91"
        app:layout_constraintEnd_toStartOf="@+id/v"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline5" />



    <TextView
        android:id="@+id/distance"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="2dp"
        android:layout_marginBottom="2dp"
        android:background="@color/_____cancel_text"
        android:gravity="center"
        android:text="DIST: 1234.67m"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/H_91"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/v"
        app:layout_constraintTop_toTopOf="@+id/guideline5" />


</androidx.constraintlayout.widget.ConstraintLayout>