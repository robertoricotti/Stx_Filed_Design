<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/topLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorStonexBlue"
        android:orientation="horizontal"
        android:layout_weight="1">
        <ImageView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/sat_24"
            android:paddingVertical="2dp"
            app:tint="@color/_____cancel_text" />
        <ImageView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/gps_fixed_24"
            android:paddingVertical="2dp"
            app:tint="@color/_____cancel_text" />
        <ImageView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/location_on_24"
            android:paddingVertical="2dp"
            app:tint="@color/_____cancel_text" />
        <ImageView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/rtk_24"
            android:paddingVertical="2dp"
            app:tint="@color/_____cancel_text" />
        <ImageView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:rotation="-90"
            android:src="@drawable/arrow_right_alt_24"
            android:paddingVertical="2dp"
            app:tint="@color/_____cancel_text" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorStonexBlue"
        android:orientation="horizontal"
        android:layout_weight="1">
        <TextView
            android:id="@+id/txt_1"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="0"
            android:gravity="center"
            android:textStyle="bold"
            android:ems="2"
            android:textColor="@color/_____cancel_text"
            />
        <TextView
            android:id="@+id/txt_2"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text=""
            android:gravity="center"
            android:textStyle="bold"
            android:ems="2"
            android:textColor="@color/_____cancel_text"
            />
        <TextView
            android:id="@+id/txt_3"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="CQ:"
            android:gravity="center"
            android:textStyle="bold"
            android:ems="2"
            android:textColor="@color/_____cancel_text"
            />
        <TextView
            android:id="@+id/txt_4"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="-.-"
            android:gravity="center"
            android:textStyle="bold"
            android:ems="2"
            android:textColor="@color/_____cancel_text"
            />
        <TextView
            android:id="@+id/txt_5"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text=""
            android:gravity="center"
            android:textStyle="bold"
            android:ems="2"
            android:textColor="@color/_____cancel_text"
            />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black" />
    <TextView
        android:id="@+id/txt_coord"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:text="E:0000.000\t\tN:0000.000\t\tZ:0000.000"
        android:textSize="16sp"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:background="@drawable/custom_background_light_2"
        android:maxLines="1"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black" />
    <TextView
        android:id="@+id/txt_canstat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:text="CAN DISCONNECTED"
        android:textSize="16sp"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:background="@drawable/custom_background_light_2"
        android:maxLines="1"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black" />




</LinearLayout>