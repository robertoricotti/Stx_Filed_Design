<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    tools:context="activity_portrait.P_WorkActivity">

    <include
        android:id="@+id/topView"
        layout="@layout/shared_layout_top" />

    <include
        android:id="@+id/lowerView"
        layout="@layout/shared_layout_low" />
    <LinearLayout
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="5dp"
        android:id="@+id/backLayour"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/lowerView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topView"
        android:orientation="vertical"
        android:background="@color/red"
        android:gravity="center|center_vertical">
        <TextView
            android:id="@+id/txtoff"
            android:layout_weight="0.5"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Offset: 0.000"
            android:textSize="30dp"
            android:textStyle="bold"/>
        <TextView
        android:layout_weight="0"
            android:id="@+id/statusSurf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â–¼"
            android:textSize="450px"
            android:textStyle="bold"
            android:textColor="@color/white"
            />

        <TextView
            android:layout_weight="2"
            android:id="@+id/distSurf"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:gravity="center"
            android:text="-123.456"
            android:textSize="150px"
            android:textStyle="bold"
            android:textColor="@color/white"
            />

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>