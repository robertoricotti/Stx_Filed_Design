<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    tools:context="activity_portrait.UOM_Activity">
    <include
        android:id="@+id/topView"
        layout="@layout/shared_layout_top" />
    <include
        android:id="@+id/lowerView"
        layout="@layout/shared_layout_low" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/topView"
        app:layout_constraintBottom_toTopOf="@id/lowerView">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:id="@+id/title_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/_____cancel_text"
                android:gravity="center"
                android:text="Distance Unit of Measure"
                android:textColor="@color/white"
                android:textSize="18sp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/custom_background_light">
                <CheckBox
                    android:id="@+id/ckMetri"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:text="Meters" />

                <CheckBox
                    android:id="@+id/ckPiedi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:text="US Survey Feet" />

            </LinearLayout>
            <TextView
                android:id="@+id/title_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/_____cancel_text"
                android:gravity="center"
                android:text="Slope Unit of Measure"
                android:textColor="@color/white"
                android:textSize="18sp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/custom_background_light">
                <CheckBox
                    android:id="@+id/ckDeg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:text="Degrees (xx.xx Â°)" />

                <CheckBox
                    android:id="@+id/ckPercent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:text="Percent (xx.xx %)" />

            </LinearLayout>
            <TextView
                android:id="@+id/title_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/_____cancel_text"
                android:gravity="center"
                android:text="Measuring Tool"
                android:textColor="@color/white"
                android:textSize="18sp"
                />
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/container_draw_uom"
                android:layout_width="match_parent"
                android:layout_height="270dp"
                android:layout_margin="5dp"
                android:background="@color/light_gray">


            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>


    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>